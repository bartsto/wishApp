<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WishDetailActivity">

    <ImageView
            android:layout_width="378dp"
            android:layout_height="319dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView" android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/button_delete_wish"
            android:layout_width="149dp"
            android:layout_height="39dp" tools:layout_editor_absoluteY="627dp"
            android:id="@+id/button_delete_wish"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"/>
    <Button
            android:text="@string/button_save_changes"
            android:layout_width="149dp"
            android:layout_height="39dp" tools:layout_editor_absoluteY="627dp"
            android:id="@+id/button_save_edited"
            android:layout_marginEnd="18dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="376dp"
            android:layout_height="198dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/wish_desc_display" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="18dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/wish_name_display"/>
    <EditText
            android:layout_width="378dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/wish_name_display" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="18dp" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <Button
            android:text="@string/button_find"
            android:layout_width="369dp"
            android:layout_height="49dp" tools:layout_editor_absoluteY="666dp"
            android:id="@+id/button_find" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="18dp"/>
</android.support.constraint.ConstraintLayout>