<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1007dp"
            tools:ignore="MissingConstraints">
        <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="350sp"/>

    </LinearLayout>

    <Button
            android:text="@string/button_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_add_new" android:layout_marginEnd="53dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="70dp"
            android:onClick="newWish"/>
</android.support.constraint.ConstraintLayout>