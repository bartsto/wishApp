<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.wishapp">

    <uses-feature
            android:name="android.hardware.camera"
            android:required="true"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_unicorn"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_unicorn_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".WishDetailActivity">
        </activity>
        <activity
                android:name=".NewWishActivity"
                android:parentActivityName=".MainActivity">
        </activity>

        <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <provider
                android:name="android.support.v4.content.FileProvider"
                android:authorities="com.example.wishapp.fileprovider"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/file_paths"/>
        </provider>

        <activity
                android:name=".SecondActivity"
                android:parentActivityName=".MainActivity"/>
    </application>

</manifest>